}
.top input {
  width: 600rpx;
  height: 60rpx;
  background: #F3F4F6;
  border-radius: 10rpx;
}
.top image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 140rpx;
}
.top .cancel {
  font-size: 14px;
  color: #272832;
}
.main {
