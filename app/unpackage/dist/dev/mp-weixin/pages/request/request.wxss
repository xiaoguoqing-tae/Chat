.head {
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  box-shadow: 0px 1px 0px 0px rgba(0, 0, 0, 0.1);
  text-align: center;
  position: relative;
  line-height: 88rpx;
}
.head image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 24rpx;
  bottom: 20rpx;
}
.main {
  padding: 40rpx 32rpx;
}
.main .requester {
  margin-top: 112rpx;
  padding: 20rpx;
  background: white;
  box-shadow: 0px 24rpx 64rpx -8rpx rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}
.main .request-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
}
.main .request-top .btn {
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
  width: 160rpx;
  height: 64rpx;
  background: rgba(255, 93, 91, 0.1);
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #ff5d5b;
  line-height: 64rpx;
}
.main .request-top .reject {
  color: #ff5d5b;
  background: rgba(255, 93, 91, 0.1);
}
.main .request-top .agree {
  color: #272832;
  background: #ffe431;
}
.main .request-top .header-img {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  text-align: center;
  margin-top: -104rpx;
}
.main .request-top .header-img image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}
.main .request-center {
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.main .request-center .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #272832;
  line-height: 50rpx;
}
.main .request-center .time {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 34rpx;
}
.main .notic {
  padding: 20rpx 32rpx;
  border-radius: 20rpx;
  background-color: #f3f4f6;
  font-size: 28rpx;
  color: #272832;
  line-height: 40rpx;
}

