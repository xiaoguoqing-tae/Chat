.top {
  width: 100%;
  height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 80.2rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding-top: 25px;
}
.top image {
  padding: 10rpx 34.2rpx 0 34.2rpx;
  width: 48rpx;
  height: 48rpx;
}
.main {
  width: 100%;
}
.main .logo {
  width: 100%;
  text-align: center;
  padding: 20rpx;
}
.main .logo image {
  width: 450rpx;
  height: 150rpx;
}
.main .form-input {
  width: 100%;
}
.main .form-input .title {
  padding-left: 64rpx;
  margin-bottom: 64rpx;
}
.main .form-input .title .login {
  font-size: 28px;
  color: #272832;
}
.main .form-input .title .login-content {
  font-size: 20px;
  color: rgba(39, 40, 50, 0.5);
}
.main .form-input .name, .main .form-input .user, .main .form-input .password {
  position: relative;
  padding-left: 64rpx;
  margin-bottom: 50rpx;
}
.main .form-input .name input, .main .form-input .user input, .main .form-input .password input {
  font-size: 16px;
  color: rgba(39, 40, 50, 0.4);
  width: 90%;
  border-bottom: 1px solid rgba(39, 40, 50, 0.08);
}
.main .form-input .password {
  position: relative;
}
.main .form-input .password image {
  position: absolute;
  top: -6rpx;
  right: 45rpx;
  width: 60rpx;
  height: 60rpx;
}
.main .login-btn {
  width: 520rpx;
  height: 96rpx;
  background: #5EA9C9;
  box-shadow: 0 25px 16px -18px rgba(255, 228, 49, 0.4);
  border-radius: 24rpx;
  text-align: center;
  line-height: 96rpx;
  margin: 0 auto;
  margin-top: 80rpx;
  ont-size: 16px;
  color: #272832;
}
.error {
  top: -3rpx;
  right: 50rpx;
  position: absolute;
  font-size: 15px;
  color: red;
}
.error_pwd {
  top: 55rpx;
  right: 50rpx;
  position: absolute;
  font-size: 15px;
  color: red;
}
.success {
  top: -3rpx;
  right: 50rpx;
  position: absolute;
  width: 40rpx;
  height: 40rpx;
}

